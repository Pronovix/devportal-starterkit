{
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php",
            "scripts/composer/ComposerScripts.php"
        ],
        "psr-4": {
            "": "features/bootstrap",
            "Drupal\\Core\\Composer\\": "core/lib/Drupal/Core/Composer"
        }
    },
    "config": {
        "discard-changes": true,
        "platform": {
            "php": "7.1"
        },
        "sort-packages": true
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "description": "Project template for Drupal 8 projects with composer",
    "extra": {
        "drupal-scaffold": {
            "excludes": [
                ".htaccess",
                "robots.txt"
            ],
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        },
        "installer-paths": {
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        },
        "merge-plugin": {
            "include": [
                "web/modules/custom/*/composer.json",
                "web/modules/devportal/*/composer.json"
            ],
            "merge-extra": false,
            "recurse": false,
            "replace": false
        }
    },
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "name": "pronovix/devportal-starterkit",
    "optimize-autoloader": true,
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/config_devel": "^1.0",
        "drupal/config_inspector": "^1.0@beta",
        "drupal/config_installer": "^1.8",
        "drupal/core": "^8.6",
        "drupal/devel": "^1.0",
        "drupal/devportal": "^2.0@alpha",
        "drupal/legal": "^1.0@RC",
        "drupal/paragraphs": "^1.5",
        "drupal/redis": "^1.0",
        "drupal/swagger_ui_formatter": "^2.0",
        "drush/drush": "^9.4",
        "webflo/drupal-finder": "^1.1",
        "webmozart/path-util": "^2.3",
        "wikimedia/composer-merge-plugin": "~1.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "behat/mink": "dev-master#9ea1cebe",
        "behat/mink-goutte-driver": "^1.2",
        "drupal/coder": "^8.3",
        "drupal/config_devel": "^1.2",
        "drupal/testtools": "^1.0",
        "phpunit/phpunit": "^6.5"
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "@drupal-scaffold"
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-create-project-cmd": [
            "DevportalStarterKit\\composer\\ComposerScripts::initializeProject"
        ]
    },
    "type": "project"
}
